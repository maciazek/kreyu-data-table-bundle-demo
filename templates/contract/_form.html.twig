{{ form_start(form, {attr: {id: form.vars.id}}) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.title) }}
            <div class="row gx-3">
                <div class="col-xl-6">
                    {{ form_row(form.beginDate) }}
                </div>
                <div class="col-xl-6">
                    {{ form_row(form.endDate) }}
                </div>
            </div>
            {% if form.currentTarget is defined %}
                {{ form_row(form.currentTarget) }}
            {% endif %}
        </div>
        <div class="col-md-6">
            <div class="row gx-3">
                <div class="col-xl-6">
                    {{ form_row(form.salary) }}
                </div>
                <div class="col-xl-6">
                    {{ form_row(form.salaryInCents) }}
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
