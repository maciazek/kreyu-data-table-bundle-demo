{% extends 'base.html.twig' %}

{% block title %}{{ 'app_experimental'|trans({}, 'routes') }} - {{ 'app_experimental_batch_modal_action'|trans({}, 'routes') }} â€¢ {{ parent() }}{% endblock %}
{% block header %}<span class="text-secondary">{{ 'app_experimental'|trans({}, 'routes') }}<i class="bi bi-chevron-right mx-1"></i></span>{{ 'app_experimental_batch_modal_action'|trans({}, 'routes') }}{% endblock %}
{% block toolbar %}
    {{ component('Button', {
        tag: 'a',
        context: 'outline-primary',
        href: 'https://data-table-bundle.swroblewski.pl/reference/types/action.html',
        icon: 'book',
        target: '_blank',
        label: 'documentation'|trans({}, 'buttons'),
        tooltip: {placement: 'bottom', title: 'documentation'|trans({}, 'buttons')},
        responsive: true,
    }) }}
    {{ component('Button', {
        tag: 'button',
        context: 'outline-primary',
        icon: 'braces',
        'data-bs-toggle': 'modal',
        'data-bs-target': '#sourceCodeModal',
        label: 'source_code'|trans({}, 'buttons'),
        tooltip: {placement: 'bottom', title: 'source_code'|trans({}, 'buttons')},
        responsive: true,
    }) }}
{% endblock %}

{% block modals %}
    {{ component('SourceCodeModal', {classes: source_code_classes}) }}
{% endblock %}

{% block body %}
    <div class="alert alert-warning">
        {{ 'experimental_warning'|trans({}, 'messages') }}
    </div>

    <div class="card">
        {{ data_table(employees) }}
    </div>
{% endblock %}
