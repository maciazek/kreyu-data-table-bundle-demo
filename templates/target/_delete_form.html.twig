<form method="post" action="{{ path('app_target_delete', {'id': target.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ target.id) }}">
    {{ component('Button', {
        tag: 'button',
        type: 'submit',
        context: 'danger',
        icon: 'trash',
        label: 'app_target_delete'|trans({}, 'routes'),
        tooltip: {placement: 'bottom', title: 'app_target_delete'|trans({}, 'routes')},
        responsive: true,
    }) }}
</form>
