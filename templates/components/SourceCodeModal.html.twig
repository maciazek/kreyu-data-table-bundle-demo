{% props id = 'sourceCodeModal', files = [] %}
<div class="modal fade" id="{{ id }}" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">{{ 'source_code'|trans({}, 'buttons') }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close'|trans({}, 'buttons') }}"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-pills" role="tablist">
                    {% for file in files %}
                        <li class="nav-item" role="presentation">
                            <button class="nav-link {{ file.id == (files|first).id ? 'active' }}" id="{{ file.id ~ 'Tab' }}" data-bs-toggle="tab" data-bs-target="#{{ file.id ~ 'TabPane' }}" type="button" role="tab" aria-controls="{{ file.id ~ 'TabPane' }}" aria-selected="{{ file.id == (files|first).id ? 'true' : 'false' }}">{{ file.name }}</button>
                        </li>
                    {% endfor %}
                </ul>
                <div class="tab-content">
                    {% for file in files %}
                        <div class="tab-pane fade {{ file.id == (files|first).id ? 'show active' }}" id="{{ file.id ~ 'TabPane' }}" role="tabpanel" aria-labelledby="{{ file.id ~ 'Tab' }}" tabindex="0">{{ file.content|raw }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
